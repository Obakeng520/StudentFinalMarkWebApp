<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddMarksServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddMarksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStatisticsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetStatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStudentsByStatusServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetStudentsByStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentViewServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StudentViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMarksServlet</servlet-name>
        <url-pattern>/AddMarksServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStatisticsServlet</servlet-name>
        <url-pattern>/GetStatisticsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStudentsByStatusServlet</servlet-name>
        <url-pattern>/GetStudentsByStatusServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentViewServlet</servlet-name>
        <url-pattern>/StudentViewServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>LecturerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Lecturer</web-resource-name>
            <description>Resources available to the lecturer</description>
            <url-pattern>/add_marks.html</url-pattern>
            <url-pattern>/get_statistics.html</url-pattern>
            <url-pattern>/get_students_by_status.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Authenticate the user</description>
            <role-name>Lecturer</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>StudentFRealm </realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>The lecturer will upload the marks and view the statistics</description>
        <role-name>Lecturer</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
</web-app>
